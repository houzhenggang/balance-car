//串口0接收中断
#pragma interrupt_handler uart_receive:19
void uart_receive(void)
{  
   unsigned char rchar;
   
   rchar = UDR0;
  
   send_char(rchar);
}

//外部中断0
#pragma interrupt_handler INT_T0:2
void INT_T0(void)
{
 	 countLeft++;
}

//外部中断1 
#pragma interrupt_handler INT_T1:3
void INT_T1(void)
{
 	 countRight++;
}

