#include "iom128v.h"
#include "encoder.h"

//编码器初始化
void encoder_init(void)
{
 	 DDRD &= ~0x03;
	 EIMSK |= (1<<INT0) | (1<<INT1);
	 EICRA &= 0xF0;
	 EICRA |= (1<<ISC01) | (1<<ISC11);
}

//T3定时器初始化，用于定时
//1分频,最大计时时间65535*(1/8000000)*1000 = 8.191875ms
//则定时1ms计数值为 65535*((8.191875-1)/8.191875) = 57535
void timer3_init(void)
{
 	 TCCR3A=0X00;
	 TCCR3B=(1<<CS30);
	 TCNT3=57535;
	 ETIMSK|=(1<<TOIE3);
}
