#include "iom128v.h"
#include "gy_25.h"

void gy_25_init(void)
{
 	//设置帧格式: 8 个数据位, 1个停止位
	UCSR1C = (1<<UCSZ10)|(1<<UCSZ11); 
	
	//U2X=0时的公式计算
    UBRR1L= (16000000/9600/16-1)%256;
    UBRR1H= (16000000/9600/16-1)/256;
	
	//使能接收中断，使能接收，使能发送
	UCSR1A = 0x00;
	UCSR0B = (1<<RXCIE1)|(1<<RXEN1)|(1<<TXEN1);
}

// 数据发送
void gy_25_send(unsigned char data )
{
     //等待发送缓冲器为空 
     while ( !( UCSR1A & (1<<UDRE1)) );
     // 将数据放入缓冲器，发送数据 
     UDR1 = data;
}