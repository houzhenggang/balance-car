#ifndef PID_H
#define PID_H

#define PRESENT 2
#define LAST		1
#define BEFORE	0

typedef struct 
{
	float kp;//比例系数
	float ki;//积分系数
	float kd;//微分系数
	float target;//PID目标
	float lastcontrol;//最新的输出控制值
	float enote[3];//误差记录
	float sumerr;
}PID_Struture;

void  PID_InitStruture(PID_Struture* pid,float kp,float ki,float kd,float target);//PID结构体初始化
float PID_devCal(PID_Struture* pid,float fbv);//计算偏差值
float PID_Inc(PID_Struture* pid);//一般数字式PID
float PID_Nor(PID_Struture* pid);

#endif