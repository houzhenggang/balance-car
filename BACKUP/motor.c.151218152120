#include "iom128v.h"
#include "motor.h"
#include "stdio.h"

//电机A：PWM引脚PB5，方向控制引脚PC0，PC1
//电机B: PWM引脚PB6，方向控制引脚PC2，PC3
void motor_io_init(void)
{
	//PB5,6设置为输出,控制PWM
	DDRB |= (0x03<<5);
	
	//PC0,1,2,3设置为输出控制方向
	DDRC |= (0x0F);
	PORTC &= ~(0x0F);
}

//电机pwm初始化
void motor_pwm_init(void)
{
	OCR1A = 0;
	OCR1B = 0;
	
	//9位快速pwm
	TCCR1A |= (1<<WGM11);
	TCCR1B |= (1<<WGM12);
	
	//pwm输出口
	TCCR1A |= (1<<COM1A1) | (1<<COM1B1);
	
	//8分频，pwm频率=16000000/(8*256) = 8KHz
	TCCR1B |= (1<<CS12)|(1<<CS10);
}

void motor_init(void)
{
    motor_io_init();
	motor_pwm_init();
}

void PWM_output(int PWM_LH,int PWM_RH)
{
	if (PWM_LH<0)
	{
		PORTC &= ~0x03;
		PORTC |= 0x01;
		PWM_LH *= -1; 
	}
	else
	{
		PORTC &= ~0x03;
		PORTC |= 0x02;
	}
	
	if (PWM_LH>1000)
	{
		PWM_LH=1000;
	}
	
	
	if (PWM_RH<0)
	{ 
		PORTC &= ~0x0C;
		PORTC |= 0x04;
		PWM_RH *= -1;
	}
	else
	{
		PORTC &= ~0x0C;
		PORTC |= 0x08;
	}
	
	if (PWM_RH>1000)
	{
		PWM_RH=1000;
	}
	
	OCR1AH=0;
	OCR1AL=PWM_LH;			//OC1A输出；
	
	OCR1BH=0;
	OCR1BL=PWM_RH;			//OC1B输出；
}