}

//外部中断0
#pragma interrupt_handler INT_T0:2
void INT_T0(void)
{  
	if(PING & (0x01<<3))
		countLeft++;
	else
		countLeft--;
}

//外部中断1 
#pragma interrupt_handler INT_T1:3
void INT_T1(void)
{  
	if(PING & (0x01<<4))
	    countRight++;
	else
		countRight--;
}
