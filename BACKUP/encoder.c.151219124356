#include "iom128v.h"
#include "encoder.h"

unsigned long countLeft = 0;
unsigned long countRight = 0;

//编码器初始化
void encoder_init(void)
{
 	DDRD &= ~0x03;
	DDRG &= ~((0x01<<3)|(0x01<<4));
	PORTG |= (0x01<<3)|(0x01<<4);
	EIMSK |= (1<<INT0) | (1<<INT1);
	EICRA &= 0xF0;
	EICRA |= (1<<ISC01) | (1<<ISC11);
}

