#include "iom128v.h"
#include "encoder.h"

int countLeft;
int countRight;

//编码器初始化
void encoder_init(void)
{
 	 DDRD &= ~0x03;
	 EIMSK |= (1<<INT0) | (1<<INT1);
	 EICRA &= 0xF0;
	 EICRA |= (1<<ISC01) | (1<<ISC11);
}

/*外部中断0 */
#pragma interrupt_handler INT_T0:2
void INT_T0(void)
{
countLeft++;
}

/*外部中断1 */
#pragma interrupt_handler INT_T1:3
void INT_T1(void)
{
countRight++;
}