float Inc_Cal(INC_PID *pid , float now_Angle)
{
	float iError, iIncpid;
	
	iError = pid->Target - now_Angle;
	
	iIncpid = pid->Kp*iError - pid->Ki*pid->last_Error + pid->Kd*pid->pre_Error;
	
	pid->pre_Error = pid->last_Error;
	
	pid->last_Error = iError;
	
	return iIncpid;
}
