//增量式pid初始化
void Inc_Pid_Config(INC_PID *pid , float set_Kp , float set_Ki , float set_Kd , float set_Target)
{
	pid->Kp = set_Kp;
	pid->Ki = set_Ki;
	pid->Kd = set_Kd;
	pid->Target = set_Target;
	
	pid->last_Error = 0;
	pid->pre_Error = 0;
	pid->bef_Error = 0;
}
